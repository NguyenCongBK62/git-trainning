<div class="container">
  <% if obj.errors.any? %>

    <div class="form-group row">
      <div class="col-md-8">
        <div class="col-sm offset-3">
          <div class="card card-danger" >
            <div class="card-header" >
              <h2 class="card-title", align="center">
                <%= pluralize(obj.errors.count, "error") %>
                prohibited this article being saved:
              </h2>
              <div class="card-body">
                <ul>
                  <% obj.errors.full_messages.each do |msg| %>

                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>
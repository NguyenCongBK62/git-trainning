<h1 align="center">Log in</h1>
    <%= form_for(:session, :html => {class: "form-horizontal center", role: "form"}, url: login_path) do |f| %>
      <div class="form-group row">
        <div class="control-label col-sm-2" align="right">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8" align="center">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="control-label col-sm-2" align="right">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8" align="center">
          <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm offset-2">
          <%= f.submit "Log in",class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div align="center">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>